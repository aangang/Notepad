<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
    android:background="@mipmap/main_bg"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#00000000"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:src="@android:drawable/ic_media_rew"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/id_btn_add_back"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑"
            android:textSize="20dp"
            android:textColor="#3d3d3d"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#00000000"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/id_viewTime"
            android:textColor="#df5df5"
            android:background="#C1D3C1"
            android:text="2016-10-08 22:20:25"/>
        <xiaoguang.tools.SpanText
            android:background="#00000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="top"
            android:id="@+id/id_editContent"
            android:text=""
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#00000000"
        >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:src="@android:drawable/ic_menu_camera"
            android:layout_alignParentRight="true"
            android:id="@+id/id_btn_start_camera"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:layout_gravity="center"
            android:src="@android:drawable/ic_menu_save"
            android:id="@+id/id_btn_save"
            android:layout_centerHorizontal="true"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:layout_alignParentLeft="true"
            android:src="@android:drawable/ic_menu_gallery"
            android:id="@+id/id_btn_usingpic"/>

    </RelativeLayout>
</LinearLayout>
